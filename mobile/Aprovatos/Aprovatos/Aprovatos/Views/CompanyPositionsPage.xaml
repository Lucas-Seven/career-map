<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aprovatos.Views.CompanyPositionsPage"
             Title="Posições"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="Escolha sua posição"
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" />

            <ListView x:Name="lstCompanyPositions" ItemSelected="lstCompanyPositions_ItemSelected">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Júnior</x:String>
                        <x:String>Pleno</x:String>
                        <x:String>Sênior</x:String>
                        <x:String>Master</x:String>
                        <x:String>Especialista</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>