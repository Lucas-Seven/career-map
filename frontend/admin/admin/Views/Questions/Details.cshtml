    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input name="QuestionId" type="hidden" />

                <label asp-for="Question" class="control-label">Questão</label>
                <input asp-for="Question" class="form-control disabled" readonly/>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control disabled" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Type.QuestionTypeName" class="control-label">Descrição</label>
            <input asp-for="Type.QuestionTypeName" class="form-control disabled" readonly />
            <span asp-validation-for="Type.QuestionTypeName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.CheckBoxFor(x => x.IsRequired, new{ @class="form-check-input", disabled="disabled"} )
                <label class="form-check-label" for="IsRequired">
                    Obrigatório
                </label>
            </div>
        </div>
    </div>


    @if (!Model.Type.QuestionTypeName.ToLower().Equals("text")){
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Alternatives.FirstOrDefault().AlternativeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Alternatives.FirstOrDefault().Text)
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Alternatives) {
            <tr>
                    <td> 
                        @Html.DisplayFor(modelItem => item.AlternativeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
