@model admin.Api.Model.Response.TestEntireResponse

@{
    //ViewBag.Title = "Carreira - " + Model.CareerMapResponse.CareerMapName;
    ViewData["Title"] = Model.Description;
}

<h4>Questões do teste</h4>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><a href="@Url.Action("Index", "CareerMaps")">Mapas de carreira</a></li>
        @*<li class="breadcrumb-item"><a href="@Url.Action("CompanyPositionsCareerMapDetail", "CareerMaps", new { careerMapId = f.Model.CareerMap.CareerMapId })">@Model.CareerMap.CareerMapName</a></li>*@
        <li class="breadcrumb-item active">@Model.Description</li>
    </ol>
</nav>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <button class="btn btn-outline-success me-md-2" type="button" onclick="location.href='@Url.Action("Create", "Questions", new { testId = Model.TestId })'"
            @*, new{ testId = Model.TestId}*@>
        Adicionar Questão
    </button>
</div>

<table class="table table-striped datatables">
    <thead>
        <tr>
            @*            <th>
            @Html.DisplayNameFor(model => model.QuestionsAlternatives.FirstOrDefault().QuestionId)
            </th>
            *@
            <th class="w-50">
                @Html.DisplayNameFor(model => model.QuestionsAlternatives.FirstOrDefault().Question)
            </th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.QuestionsAlternatives.FirstOrDefault().Type)
            </th>
            <th class="w-25">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.QuestionsAlternatives)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.QuestionId)
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.QuestionTypeName)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@

                    <button class="btn btn-outline-info btn-sm" onclick="location.href='@Url.Action("Details", "Questions", new {  questionId=item.QuestionId })'">Vizualizar</button>

                    @*@Html.ActionLink("Visualizar", "Details", "Questions", new {  questionId=item.QuestionId })*@
                </td>
            </tr>
        }
    </tbody>
</table>
