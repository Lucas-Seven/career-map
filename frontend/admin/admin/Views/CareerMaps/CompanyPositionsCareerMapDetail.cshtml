@model admin.Api.Model.Response.CompanyPositionListResponse
@{
    ViewBag.Title = "Carreira - " + Model.CareerMapResponse.CareerMapName;
}

<h4>Cargos da carreira</h4>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "CareerMaps")">Mapas de carreira</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.CareerMapResponse.CareerMapName</li>
    </ol>
</nav>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <button class="btn btn-outline-dark me-md-2" type="button" onclick="location.href='@Url.Action("AssociatePositions", new { careerMapId = Model.CareerMapResponse.CareerMapId } )'">Associar cargos</button>
</div>

<table class="table table-striped datatables">
    <thead>
        <tr>
            <th>
                Cargos
            </th>
            <th class="w-25">
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.CompanyPositionResponseList)
        {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.CompanyPositionInfo.CompanyPositionId)
                @Html.DisplayFor(modelItem => item.CompanyPositionInfo.CompanyPositionName)
            </td>
            <td>
                    <button class="btn btn-outline-info btn-sm" onclick="location.href='@Url.Action("RequirementsCompanyPositionDetail", new { careerMapId = Model.CareerMapResponse.CareerMapId, companyPositionId = item.CompanyPositionInfo.CompanyPositionId })'">Requisitos</button>
            </td>
        </tr>
        }
       @* <tr>
            <td>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </td>
        </tr>*@
    </tbody>
</table>

<style>
.btn-details {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 8px 8px;
  border-radius: 4px;
  cursor: pointer;
}

.btn-details:hover {
  background-color: #0069d9;
}
</style>