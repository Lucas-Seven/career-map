@model admin.Api.Model.Response.CompanyPositionListResponse
@{
    ViewBag.Title = "Carreira - " + Model.CareerMapResponse.CareerMapName;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "CareerMaps")">Mapas de carreira</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.CareerMapResponse.CareerMapName</li>
    </ol>
</nav>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Career name
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model.CompanyPositionResponseList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyPositionInfo.CompanyPositionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyPositionInfo.CompanyPositionName)
            </td>
            <td>
                <button class="btn-details" onclick="location.href='@Url.Action("RequirementsCompanyPositionDetail", new { careerMapId = Model.CareerMapResponse.CareerMapId, companyPositionId = item.CompanyPositionInfo.CompanyPositionId })'">Requisitos</button>
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>
</table>

<style>
.btn-details {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 8px 8px;
  border-radius: 4px;
  cursor: pointer;
}

.btn-details:hover {
  background-color: #0069d9;
}
</style>